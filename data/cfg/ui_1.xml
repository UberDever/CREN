#pos and size are percentage values!
#order of scenes matters
#order of element components matters too
#id do nothing at that point (01.05.20)
#elements and scenes can have their unique id. If it isn't provided, id is assigned by element order, hierarchically
#element type - static or dynamic, defined by button/slider/etc.. attribute

#comment elements for convenience
#<scene id="0"></scene>                                                 id = scene identifier
#<element id="0"></element>                                             id = unused
#<frame pos="0 0" size="0 0" color="0x0" type="0">
#<text pos="0 0" size="0" color="0x0" font="font.ttf">EXAMPLE</text>
#<picture pos="0 0" size="0 0" png="pic.png">

<ui>

    <scene id="0"> #MainMenu scene
        <element type="static">
            <frame pos="40 25" size="20 50" color="0xFFFFFFFF">
            <text pos="50 10" size="18" color="0xffa50000" font="Gothic_1.ttf" align="center">PAUSE</text>
            <picture pos="0 0" size="100 100" png="pause_background.png">
            
            <element type="static">
                <frame pos="10 85" size="80 10" color="0x0">
                <text pos="50 50" size="14" color="0xffa50000" font="Gothic_1.ttf" align="center">EXIT</text>
                <picture pos="0 0" size="100 100" png="button.png">
            </element>
        </element>
    </scene>

    <scene id="1"> #GamePause scene
        <element type="static">
            <frame pos="40 15" size="20 70" color="0xFFFFFFFF">
            <text pos="50 10" size="48" color="0xffa50000" font="Gothic_1.ttf" align="center">PAUSE</text>
            <picture pos="0 0" size="100 100" png="pause_background.png">
                        

            
        </element>
    </scene>
    
    <scene id="2"> #Options scene
        <element type="static">
            <frame pos="40 15" size="20 70" color="0xFFFFFFFF">
            <text pos="50 10" size="48" color="0xffa50000" font="Gothic_1.ttf" align="center">OPTIONS</text>
            <picture pos="0 0" size="100 100" png="pause_background.png">
            
            <element type="static"> #element-div!
                <frame pos="0 -5" size="100 100" color="0xFFFFFFFF">
                
                <element type="dynamic">
                    <frame pos="10 88" size="80 10" color="0x0">
                    <text pos="50 50" size="36" color="0xffa50000" font="Gothic_1.ttf" align="center">BACK</text>
                    <picture pos="0 0" size="100 100" png="button.png">
                    <button var="exit" value="1" default="0"></button>
                </element>
            </element>
              
        </element>
    </scene>
    
</ui>
